@{
    ViewBag.Title = "Index";
}
<h2>Queue Index</h2>
<div class="w3-bar w3-black">
    <a href="@Url.Action("Index", "Stack")" class="w3-bar-item w3-button">Stack</a>
    <a href="@Url.Action("Index", "Queue")" class="w3-bar-item w3-button">Queue</a>
    <a href="@Url.Action("Index", "Dictionary")" class="w3-bar-item w3-button">Dictionary</a>
    <a href="@Url.Action("Exit", "Index")" class="w3-bar-item w3-button">Exit</a>
</div>
<div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
    <h3 class="w3-bar-item">Menu</h3>
    <a href="@Url.Action("AddOne", "Queue")" class="w3-bar-item w3-button">Add one time to Queue</a>
    <a href="@Url.Action("HugeList", "Queue")" class="w3-bar-item w3-button">Add Huge List of Items to Queue</a>
    <a href="@Url.Action("DisplayQueue", "Queue")" class="w3-bar-item w3-button">Display Queue</a>
    <a href="@Url.Action("DeleteQueue", "Queue")" class="w3-bar-item w3-button">Delete Queue</a>
    <a href="@Url.Action("ClearQueue", "Queue")" class="w3-bar-item w3-button">Clear Queue</a>
    <a href="@Url.Action("SearchQueue", "Queue")" class="w3-bar-item w3-button">Search Queue</a>
    <a href="@Url.Action("MainMenu", "Queue")" class="w3-bar-item w3-button">Return to Main Menu</a>
</div>

<div class="rightdisplay">
    <h3>@ViewBag.Search</h3>
    @if (ViewBag.StopWatch != null)
    {
        <h4>Time to find item: @ViewBag.StopWatch</h4>
    }
    <hr />
</div>
<div class="rightdisplay" id=@ViewBag.Hide style="float:right">

    @if (ViewBag.Queue != null)
    {
        int iCount = 0;
        foreach (var item in ViewBag.Queue)
        {
            iCount++;
            @item<text>; </text>
            if (iCount == 0)
            {
            }
            else if (iCount % 6 == 0)
            {
                <br />
            }
            else
            {
            }

        }
    }

    @ViewBag.errormsg
    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Nick Mahe, Sam Bankhead, Zack Jenkins, Colby Nelson</p>
    </footer>
</div>