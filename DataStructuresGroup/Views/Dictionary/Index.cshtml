
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="w3-bar w3-black">
    <a href="@Url.Action("Index","Stack")" class="w3-bar-item w3-button">Stack</a>
    <a href="@Url.Action("Index","Queue")" class="w3-bar-item w3-button">Queue</a>
    <a href="@Url.Action("Index","Dictionary")" class="w3-bar-item w3-button">Dictionary</a>
    <a href="@Url.Action("Exit","Index")" class="w3-bar-item w3-button">Exit</a>
</div>

<div class="w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
    <h3 class="w3-bar-item">Menu</h3>
    <a href="@Url.Action("AddOne", "Dictionary")" class="w3-bar-item w3-button">Add one time to Dictionary</a>
    <a href="@Url.Action("HugeList", "Dictionary")" class="w3-bar-item w3-button">Add Huge List of Items to Dictionary</a>
    <a href="@Url.Action("DisplayDictionary", "Dictionary")" class="w3-bar-item w3-button">Display Dictionary</a>
    <a href="@Url.Action("DeleteDictionary", "Dictionary")" class="w3-bar-item w3-button">Delete Dictionary</a>
    <a href="@Url.Action("ClearDictionary", "Dictionary")" class="w3-bar-item w3-button">Clear Dictionary</a>
    <a href="@Url.Action("SearchDictionary", "Dictionary")" class="w3-bar-item w3-button">Search Dictionary</a>
    <a href="@Url.Action("MainMenu", "Dictionary")" class="w3-bar-item w3-button">Return to Main Menu</a>
</div>

<div class="row">
    <div class="col-lg-6" style="float:right">
        <h3>@ViewBag.Search</h3>
        @if (ViewBag.StopWatch != null)
        {
            <h4>Time to find item: @ViewBag.StopWatch</h4>
        }
    </div>
</div>
<div class="rightdisplay" id=@ViewBag.Hide style="float:right">
    @if (ViewBag.Dictionary != null)
    {
        int iCount = 0;
        foreach (var item in ViewBag.Dictionary)
        {
            iCount++;
            @item<text>; </text>
            if (iCount == 0)
            {
            }
            else if (iCount % 6 == 0)
            {
                <br />
            }
            else
            {
            }
        }
    }
    <p>@ViewBag.errormsg</p>
    

    <footer>
        <hr />
        <p>&copy; @DateTime.Now.Year - Nick Mahe, Sam Bankhead, Zack Jenkins, Colby Nelson</p>
    </footer>

</div>